pipeline {

    agent any

    tools {
        gradle "Gradle"
    }

    stages {

        stage("Tareas de limpieza") {

           steps {
                bat "gradle --version"
                git branch: "main", url "https://github.com/FrankAtencioLoreth/SauceDemoScreenplaySerenityBDD.git"
                bat "gradle clean build"
                bat "gradle clean test"
           }

        }

        stage("Otras tareas") {

            steps {

                echo "Este es el segundo stage"

            }

        }

    }
}